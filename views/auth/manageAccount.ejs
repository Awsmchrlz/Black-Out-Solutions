
<section class="ftco-section">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-xl-10 ftco-animate">
                      <form action="/auth/updateInfo" method="post" class="billing-form">

                          <h3 class="mb-4 billing-heading">Manage Account Details</h3>
                <div class="row align-items-end">
                  <div id="errorDiv">

  <% if(message) { %>
    <p><%= message %></p>
  <% } %>
                  </div>
                    <div class="col-md-6">
                  <div class="form-group">
                      <label for="firstname">Firt Name</label>
                    <input name="firstName"  value="<%=user?.firstName%>" type="text" class="form-control" placeholder="">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                      <label for="lastname">Last Name</label>
                    <input name="lastName"  value="<%=user?.lastName%>" type="text" class="form-control" placeholder="">
                  </div>
              </div>
                  <div class="col-md-6">
                  <div class="form-group">
                      <label for="phone">Phone</label>
                    <input name="phoneNumber"  value="<%=user?.phoneNumber%>" type="text" class="form-control" placeholder="">
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group">
                      <label for="emailaddress">Email Address</label>
                    <input  name="email" value="<%=user?.email%>" type="hidden" class="form-control" placeholder="">
                  </div>
              </div>
              
              <div class="w-100">
              <div class="col-md-16 ">
                  <div class="form-group align-items-center justify-content-center">
                    <p class="text-center"><button type="submit" class="btn btn-primary py-3 px-4">Save Changes</button></p>
                  </div>
              </div>
            </div>
              </div>
            </form><!-- END -->



          </div> <!-- .col-md-8 -->
      </div>
    </div>
  </section>