<div class="container my-5">
    <h1 class="text-center mb-4">Search Results</h1>
  
    <% if (products.length > 0) { %>
        <p class="text-center text-muted mb-4">Found <%= products.length %> product(s)</p>
    
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% products.forEach(product => { %>
                <div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
                    <div class="product d-flex flex-column">
                        <a href="/shop/item/<%=product._id %>" class="img-prod"><img class="img-fluid" src="<%=product.productImage %>" alt="Colorlib Template">
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3">
                            <div class="d-flex">
                                <div class="cat">
                                    <span><%=product.productCompanyName%></span>
                                </div>
                                <!-- <div class="rating">
                                    <p class="text-right mb-0">
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    </p>
                                </div> -->
                            </div>
                            <h3><a href="/shop/item/<%=product._id %>"><%=product.productName%></a></h3>
                            <div class="pricing">
                                <p class="price"><span>K <%=product.productPrice %></span></p>
                            </div>
                            <p class="bottom-area d-flex px-3">
                                <a href="#" class="add-to-cart text-center py-2 mr-1"><span>Add to cart <i class="ion-ios-add ml-1"></i></span></a>
                                <a href="/shop/cart" class="buy-now text-center py-2">Buy now<span><i class="ion-ios-cart ml-1"></i></span></a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-search me-2"></i>No products found matching your criteria.
        </div>
    <% } %>
</div>

