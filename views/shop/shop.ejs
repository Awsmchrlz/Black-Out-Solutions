<section class="ftco-section bg-light">
    <div class="container">
            <div class="row justify-content-center mb-3 pb-3">
      <div class="col-md-12 heading-section text-center ftco-animate">
          <%if(!user){%>
            <% }else{ %>
                <h6>Welcome <%= user.firstName%> <%= user.lastName%></h6>
                <% } %>
        <h2 class="mb-4">Shop Our Exclusive Collection</h2>
        <p>Discover our handpicked selection of premium products designed to enhance your lifestyle.</p>
      </div>
    </div>   		
    </div>
    
    <div class="container">
        <div class="row">
            
            <% products.forEach(product=> { %>
                <div class="col-sm-12 col-md-6 col-lg-3 ftco-animate d-flex">
                    <div class="product d-flex flex-column">
                        <a href="/shop/item/<%=product._id %>" class="img-prod"><img class="img-fluid" src="<%=product.productImage %>" alt="Colorlib Template">
                            <div class="overlay"></div>
                        </a>
                        <div class="text py-3 pb-4 px-3">
                            <div class="d-flex">
                                <div class="cat">
                                    <span><%=product.productCompanyName%></span>
                                </div>
                                <!-- <div class="rating">
                                    <p class="text-right mb-0">
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                                    </p>
                                </div> -->
                            </div>
                            <h3><a href="/shop/item/<%=product._id %>"><%=product.productName%></a></h3>
                            <div class="pricing">
                                <p class="price"><span>K <%=product.productPrice %></span></p>
                            </div>
                            <p class="bottom-area d-flex px-3">
                                <a href="/shop/item/<%=product._id %>" class="add-to-cart text-center py-2 mr-1"><span>View Product<i class="ion-ios-cart ml-1"></i></span></a>
                                <a href="/shop/item/<%=product._id %>" class="buy-now text-center py-2">More Info<i class="ion-ios-add ml-1"></i><span></span></a>
                            </p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
  </section>
  